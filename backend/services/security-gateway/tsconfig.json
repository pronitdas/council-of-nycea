{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@uaip/types": ["../../shared/types/src"],
      "@uaip/types/*": ["../../shared/types/src/*"],
      "@uaip/utils": ["../../shared/utils/src"],
      "@uaip/utils/*": ["../../shared/utils/src/*"],
      "@uaip/config": ["../../shared/config/src"],
      "@uaip/config/*": ["../../shared/config/src/*"],
      "@uaip/services": ["../../shared/services/src"],
      "@uaip/services/*": ["../../shared/services/src/*"],
      "@uaip/middleware": ["../../shared/middleware/src"],
      "@uaip/middleware/*": ["../../shared/middleware/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../../shared/types" },
    { "path": "../../shared/utils" },
    { "path": "../../shared/config" },
    { "path": "../../shared/services" },
    { "path": "../../shared/middleware" }
  ]
} 