{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",                  // << added
    "paths": {
      "@uaip/types": ["shared/types/src"],
      "@uaip/types/*": ["shared/types/src/*"],
      "@uaip/utils": ["shared/utils/src"],
      "@uaip/utils/*": ["shared/utils/src/*"],
      "@uaip/config": ["shared/config/src"],
      "@uaip/config/*": ["shared/config/src/*"],
      "@uaip/shared-services": ["shared/services/src"],
      "@uaip/shared-services/*": ["shared/services/src/*"],
      "@uaip/middleware": ["shared/middleware/src"],
      "@uaip/middleware/*": ["shared/middleware/src/*"],
      "@uaip/agent-intelligence": ["services/agent-intelligence/src"],
      "@uaip/capability-registry": ["services/capability-registry/src"],
      "@uaip/orchestration-pipeline": ["services/orchestration-pipeline/src"],
      "@uaip/security-gateway": ["services/security-gateway/src"],
      "@uaip/discussion-orchestration": ["services/discussion-orchestration/src"]
    },

    /* safety + DX */
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* build params */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true
    // no outDir / rootDir here â€“ keep those per-package
  }
}
