{
  "files": [],
  "references": [
    { "path": "./apps/frontend" },
    { "path": "./packages/shared-types" },
    { "path": "./packages/shared-utils" },
    { "path": "./backend" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@uaip/types": ["./packages/shared-types/src"],
      "@uaip/types/*": ["./packages/shared-types/src/*"],
      "@uaip/utils": ["./packages/shared-utils/src"],
      "@uaip/utils/*": ["./packages/shared-utils/src/*"],
      "@/*": ["./src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
