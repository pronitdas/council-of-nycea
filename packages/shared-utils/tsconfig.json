{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@uaip/types": ["../shared-types/src"],
      "@uaip/types/*": ["../shared-types/src/*"]
    }
  },
  "include": ["src/**/*", "../../apps/frontend/src/components/ui/base-widget.tsx"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../shared-types" }
  ]
} 